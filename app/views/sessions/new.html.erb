<section class="container col-lg-12 text-center" id="connexion">

	<h1>Connectez-vous !</h1>

	<%= form_tag '/login' do %>
		<center>
		  <table class="login">
		  	<tr>
		  		<td><br>Email:</td>
		  		<td><br><%= text_field_tag :email %></td>
			</tr>
			<tr>
				<td><br>Mot de passe:</td> 
				<td><br><%= password_field_tag :password %></td>
			<tr><br>
		 	    <td colspan="2"><center><br><%= submit_tag "Connexion" %><center></td>
		  	</tr>
		  </table>
		</center>
	<% end %>

</section>