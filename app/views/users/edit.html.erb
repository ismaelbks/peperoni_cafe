
<div class="row edit-user-form">
  <div class="col-md-6 col-md-offset-3">
        <h2>Mettre à jour vos infos personnelles</h2>

    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>


      <%= f.label :Prénom %>
      <%= f.text_field :name.downcase, class: 'form-control' %>

      <%= f.label :Nom %>
      <%= f.text_field :last_name, class: 'form-control' %>      

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :pseudo %>
      <%= f.text_field :pseudo, class: 'form-control' %>

      <%= f.label :phone_number %>
      <%= f.phone_field :phone_number, class: 'form-control' %>

      <br>
      <div><center>Pas besoin de réecrire ton mot de passe si tu ne souhaites pas les changer </center></div>      

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <br>
    <center>
      <%= f.submit "Enregistrer", class: "btn btn-primary" %>
    </center>
    <% end %>
    <br>
    <div class="gravatar_edit">
      <center>
        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails" target="_blank"><br>Modifier</a>
      </center>
    </div>
  </div>
</div>